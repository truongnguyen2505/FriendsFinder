<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <com.finals.friendsfinder.customizes.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:id="@+id/imgAvatar"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>

    <com.finals.friendsfinder.customizes.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtName"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"/>

    <com.finals.friendsfinder.customizes.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtAddress"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp">

        <com.finals.friendsfinder.customizes.CustomTextViewFonts
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Text.SemiBold"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="Location Sharing"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_6F6D6D"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgSelectorLocation"
            android:background="@drawable/bg_selector_location"/>

    </LinearLayout>

    <com.finals.friendsfinder.customizes.CustomTextViewFonts
        android:id="@+id/btnSave"
        style="@style/StyleButtonBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPass"
        android:layout_marginTop="24dp"
        android:text="SAVE" />

</LinearLayout>
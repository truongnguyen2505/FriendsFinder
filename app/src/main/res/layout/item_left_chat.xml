<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.finals.friendsfinder.customizes.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:src="@drawable/ic_eye_show"
            android:id="@+id/imgAvatar"
            android:layout_marginStart="12dp" />

        <com.finals.friendsfinder.customizes.CustomTextViewFonts
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Regular"
            tools:text="Truong"
            android:textSize="12sp"
            android:id="@+id/tvNameUserChat"
            android:padding="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imgAvatar"
            android:textColor="@color/color_6F6D6D"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_item_chat_left"
            android:padding="8dp"
            android:layout_below="@+id/tvNameUserChat"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@+id/imgAvatar"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content">

            <com.finals.friendsfinder.customizes.CustomTextViewFonts
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Text.Medium"
                android:id="@+id/tvMess"
                android:textColor="@color/color_input_light"
                android:textSize="16sp"
                tools:text="Nguyen Duc Truong"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
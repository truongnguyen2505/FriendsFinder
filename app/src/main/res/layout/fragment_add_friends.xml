<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/lnTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@id/layoutHeader"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tabSuggest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.finals.friendsfinder.customizes.CustomTextViewFonts
                android:id="@+id/tvSuggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:text="Suggest"
                android:textAlignment="center"
                android:textColor="@color/color_input_light"
                android:textSize="16sp"
                app:font_type="@string/Roboto_Bold" />

            <View
                android:id="@+id/viewSuggest"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tabPending"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.finals.friendsfinder.customizes.CustomTextViewFonts
                android:id="@+id/tvPending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:text="Pending"
                android:textAlignment="center"
                android:textColor="@color/color_6F6D6D"
                android:textSize="16sp"
                app:font_type="@string/Roboto_Bold" />

            <View
                android:id="@+id/viewPending"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tabFriends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.finals.friendsfinder.customizes.CustomTextViewFonts
                android:id="@+id/tvFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:text="Friends"
                android:textAlignment="center"
                android:textColor="@color/color_6F6D6D"
                android:textSize="16sp"
                app:font_type="@string/Roboto_Bold" />

            <View
                android:id="@+id/viewFriends"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnTab"
        android:layout_marginTop="24dp"
        tools:listitem="@layout/item_add_friends" />

</RelativeLayout>
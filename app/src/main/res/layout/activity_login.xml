<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.androidÆ°.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp">

            <com.finals.friendsfinder.customizes.CustomTextViewFonts
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.PantonShadow"
                android:text="Friends\n Finder"
                android:gravity="center"
                android:id="@+id/imgLogo"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                />

            <com.finals.friendsfinder.customizes.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtPhone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"/>

            <com.finals.friendsfinder.customizes.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPhone"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="24dp"
                android:id="@+id/edtPass"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:id="@+id/layoutSelectAgree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPass"
                android:orientation="horizontal"
                android:padding="4dp">

                <CheckBox
                    android:id="@+id/cbAgreePolicy"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/custom_cb_square"
                    android:button="@null"
                    android:checked="false" />

                <com.finals.friendsfinder.customizes.CustomTextViewFonts
                    android:id="@+id/tvAgreePolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:gravity="start"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:font_type="@string/Roboto_Regular" />
            </LinearLayout>

            <com.finals.friendsfinder.customizes.CustomTextViewFonts
                android:id="@+id/btnLogin"
                style="@style/StyleButtonBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutSelectAgree"
                android:layout_marginTop="24dp"
                android:text="LOGIN" />

            <com.finals.friendsfinder.customizes.CustomTextViewFonts
                android:id="@+id/btnSignup"
                style="@style/StyleButtonOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin"
                android:layout_marginTop="24dp"
                android:text="SIGNUP" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

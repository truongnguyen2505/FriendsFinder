<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frChat"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvChatting"
        tools:listitem="@layout/item_chatting"
        android:layout_above="@+id/layoutMess"
        android:layout_below="@+id/layoutHeader"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/layoutMess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:paddingHorizontal="28dp"
        android:paddingVertical="16dp">

        <com.tcom.vn.customview.CustomEditTextFonts
            android:id="@+id/edtMess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_edt_border_18"
            android:hint="Input message..."
            android:paddingVertical="10dp"
            android:paddingStart="12dp"
            android:maxLength="250"
            android:textColor="@color/black"
            android:textColorHint="@color/color_bg_dialog"
            android:textSize="14sp"
            app:font_type="@string/Roboto_Regular" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="12dp"
            app:srcCompat="@drawable/ic_send_comment" />
    </LinearLayout>

</RelativeLayout>
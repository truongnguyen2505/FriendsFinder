<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClose"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_btn_close"/>

    <LinearLayout
        android:id="@+id/btnAccount"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/btnClose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_user_31_white"/>

        <com.finals.friendsfinder.customizes.CustomTextViewFonts
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            android:text="My Account"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnChangePass"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_alignStart="@+id/btnAccount"
        android:layout_below="@+id/btnAccount"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_create_post"/>

        <com.finals.friendsfinder.customizes.CustomTextViewFonts
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            android:text="Change Password"/>

    </LinearLayout>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/color_main_bg</item>
        <item name="android:windowBackground">@color/color_main_bg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomDialogTheme" parent="@style/Dialog_Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog_Theme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="CustomDialogBottom" parent="@style/Dialog_Bottom">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog_Bottom" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowEnterAnimation">@anim/no_anim</item>
        <item name="android:windowExitAnimation">@anim/no_anim</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text.Regular" parent="Widget.AppCompat.TextView">
        <item name="font_type">@string/Roboto_Regular</item>
    </style>

    <style name="Text.Bold" parent="Widget.AppCompat.TextView">
        <item name="font_type">@string/Roboto_Bold</item>
    </style>

    <style name="Text.SemiBold" parent="Widget.AppCompat.TextView">
        <item name="font_type">@string/Roboto_Semi_bold</item>
    </style>

    <style name="Text.Medium" parent="Widget.AppCompat.TextView">
        <item name="font_type">@string/Roboto_Medium</item>
    </style>

    <style name="Text.Italic" parent="Widget.AppCompat.TextView">
        <item name="font_type">@string/Roboto_Italic</item>
    </style>

    <style name="Text.Light" parent="Widget.AppCompat.TextView">
        <item name="font_type">@string/Roboto_Light</item>
    </style>

    <style name="Text.LightItalic" parent="Widget.AppCompat.TextView">
        <item name="font_type">@string/Roboto_LightItalic</item>
    </style>

    <style name="TextBlack14Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="font_type">@string/Roboto_Bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">20dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextForm14Regular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="font_type">@string/Roboto_Regular</item>
        <item name="android:textColor">@color/color_6F6D6D</item>
        <item name="lineHeight">20dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EdtForm" parent="@android:style/Widget.EditText">
        <item name="font_type">@string/Roboto_Regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_6F6D6D</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColorHint">@color/color_B3B3B3</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextRed12Regular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="font_type">@string/Roboto_Regular</item>
        <item name="android:textColor">@color/color_FF3232</item>
        <item name="lineHeight">16dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="StyleButton" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="font_type">@string/Roboto_Bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">16dp</item>
        <item name="android:background">@drawable/grey_button_background</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="StyleButtonOrange" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="font_type">@string/Roboto_Bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">19sp</item>
        <item name="android:background">@drawable/orange_button_background</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>